{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "spark-ipython-notebook",
    "labels": {
      "name": "spark-ipython-notebook"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "spark-ipython-notebook",
        "image": "jhellan/notebook-spark",
        "imagePullPolicy": "Always",  
        "ports": [
          {
            "containerPort": 8888
          }
        ],
        "env": [
          {
            "name": "xPASSWORD",
            "value": "daas"
          },
          {
            "name": "xUSE_HTTP",
            "value": "1"
          }
        ],
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        }
      }
    ]
  }
}
